{
    // Cursor settings
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorBlinking": "solid",
    // A line at the end of a file 
    "files.insertFinalNewline": true,
    // Menu bars disabling
    "chat.commandCenter.enabled": false,
    "workbench.layoutControl.enabled": false,
    "window.customTitleBarVisibility": "never",
    "window.menuBarVisibility": "toggle",
    // Default zoom
    "window.zoomLevel": 2,
    // Autosaves
    "files.autoSave": "afterDelay",
    // Font settings
    "editor.fontFamily": "'JetBrains Mono', 'bold', bold",
    "editor.fontSize": 20,
    // Установить иконки и настроить их
    "workbench.iconTheme": "catppuccin-mocha",
    "material-icon-theme.hidesExplorerArrows": true,
    "workbench.tree.indent": 14,
    // Line numeration from cursor position
    "editor.lineNumbers": "relative",
    // Delete Drag&Drop confirming
    "explorer.confirmDragAndDrop": true,
    "explorer.confirmDelete": true,
    // Hide activity bar: git, run, debug, plugins
    "workbench.activityBar.location": "hidden",
    // Catppuccin theme settings
    "workbench.colorTheme": "Catppuccin Mocha",
    "catppuccin.accentColor": "blue",
    // we try to make semantic highlighting look good
    "editor.semanticHighlighting.enabled": true,
    // prevent VSCode from modifying the terminal colors
    "terminal.integrated.minimumContrastRatio": 1,
    // make the window's titlebar use the workbench colors
    "window.titleBarStyle": "custom",
    "catppuccin.customUIColors": {
        "mocha": {
            "statusBar.foreground": "accent",
        },
    },
    "workbench.settings.applyToAllProfiles": [
        
    ],
    "python.defaultInterpreterPath": "/home/andrew/Files/venv/bin/python3.13",
    "editor.linkedEditing": true,
    "debug.disassemblyView.showSourceCode": false

}
